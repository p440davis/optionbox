{
  "name": "optionbox",
  "version": "0.1.1",
  "description": "Effortlessly transform your <select> dropdowns into user-friendly option boxes and style them your way!",
  "main": "docs/index.html",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "dev": "npm run scss | npm run ts",
    "build": "npm run lint && npm run bundle && npm run minify",
    "lint": "eslint src/**/*.ts --fix",
    "bundle": "rollup -c -o dist/optionbox.js",
    "minify": "uglifyjs dist/optionbox.js --source-map url='dist/optionbox.map.js' --compress --mangle -o dist/optionbox.min.js",
    "scss": "node-sass --output-style compressed -o dist src/scss",
    "test": "jest",
    "testwatch": "jest --watchAll"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/p440davis/optionbox.git"
  },
  "keywords": [
    "select",
    "option",
    "dropdown",
    "radio",
    "input",
    "ui",
    "ux"
  ],
  "author": "Pete Davis",
  "license": "Unlicense",
  "bugs": {
    "url": "https://github.com/p440davis/optionbox/issues"
  },
  "homepage": "https://github.com/p440davis/optionbox#readme",
  "devDependencies": {
    "@typescript-eslint/parser": "^1.11.0",
    "eslint": "^6.0.1",
    "jest": "^23.6.0",
    "node-sass": "^4.12.0",
    "rollup": "^1.16.2",
    "rollup-plugin-typescript2": "^0.21.2",
    "typescript": "^3.5.2",
    "uglify-js": "^3.6.0"
  },
  "dependencies": {}
}
